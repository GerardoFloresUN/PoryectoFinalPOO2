@model CitaModel

@{
    ViewData["Title"] = "Borrar Cita";
}

<div class="p-4 shadow-sm bg-white rounded">
    <h3 class="mb-4">@ViewData["Title"]</h3>
    <form asp-action="CitaDeleted" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Información de la Cita</h5>
                <p class="card-text">Nombre de Cita: @Model.NombreDeCita</p>
                <p class="card-text">Teléfono: @Model.Telefono</p>
                <p class="card-text">Doctor: @Model.DoctorNombre</p>
                <p class="card-text">Fecha de Cita: @Model.FechaDeCita</p>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Borrar</button>
            <a class="btn btn-secondary" asp-action="CitaList" asp-controller="Cita">Cancelar</a>
        </div>
    </form>
</div>
